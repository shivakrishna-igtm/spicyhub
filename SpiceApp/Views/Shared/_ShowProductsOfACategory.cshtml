@model IEnumerable<SpiceApp.Areas.Admin.Models.MenuItem>


@if (Model.Count() > 0)
{
<div class="col-12 post @Model.FirstOrDefault().Category.CategoryName.Replace(" ",string.Empty) menu-restaurant">

    <div class="row">
        <h3 class="text-success"> @Model.FirstOrDefault().Category.CategoryName </h3>
    </div>

    @foreach (var item in Model)
    {
        <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <img src="/Images/FoodItems/@item.Image" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                </div>
                <div class="col-md-9 col-sm-12">
                    <div class="row">
                        <div class="col-md-3 col-sm-12 offset-md-9 text-right" style="color:maroon">
                            <h4>$@item.Price</h4>
                        </div>
                    </div>

                    <div class="row col-12 text-justify d-none d-md-block">
                        <p>@Html.Raw(item.Description)</p>
                    </div>
                    <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                        <a asp-action="Details" asp-controller="Home" class="btn btn-success form-control" asp-route-id="@item.MenuItemId">Details</a>
                    </div>
                </div>
            </div>
        </div>

    }

    <div class="p-4"></div>

</div>
    }
